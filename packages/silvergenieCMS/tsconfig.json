{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@utils": ["./src/utils/index"],
      "@utils/*": ["./src/utils/*"],
      "@src": ["./src/src/index"],
      "@src/*": ["./src/src/*"]
    }
  },
  "include": ["images.d.ts", "./", "./**/*.ts", "./**/*.js", "src/**/*.json"],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**"
  ]
}
